{
    "manifest_version": 2,

    "name": "lazy loading for chrome",
    "description": "Load only the active tab and save 15% on car insurance",
    "version": "1.0",
    "author": "Anna Hwang (github: hwangas)",

    "browser_action": {
        "default_icon": "icon.png",
        "default_title": "Lazyload"
    },

    "background": {
        "persistent": true,
        "scripts": ["lazy.js"]
    },

    "permissions": [
        "tabs",
        "webRequest",
        "webRequestBlocking",
        "http://*/*",
        "https://*/*",
        "sessions",
        "https://ajax.googleapis.com/"
    ]
}
